@{
    Layout = "~/Views/Layout/HomeLayout.cshtml";
    ViewBag.Title = "Index";
}

<div class="container">
    <img src="~/Images/help-desk-tech-support.png" class="img-responsive center-block" />
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4" >
            <h1 class="text-center login-title"></h1>
            <div class="account-wall">
                <form class="form-signin">
                    <input type="text" class="form-control" placeholder="Digite seu e-mail.." required autofocus>
                    <label class="checkbox pull-right">
                        <a href="#">Esqueci a senha</a>
                    </label>
                    <input type="password" class="form-control" placeholder="Digite sua senha.." required>
                    <div class="checkbox">
                        <input name="rememberme" value="0" type="hidden">
                        <label><input name="rememberme" value="1" type="checkbox"><b>Lembrar senha?</b></label>
                    </div>
                    <input name="submit" class="btn btn-lg btn-primary btn-block" value="Acessar" type="submit">
                </form>
            </div>
        </div>
    </div>
</div>